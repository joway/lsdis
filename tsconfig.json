{
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "target": "es2015",
    "lib": [
      "es2015",
      "dom"
    ],
    "strictNullChecks": true,
    "typeRoots": [
      "./src/typings.d.ts",
      "node_modules/@types"
    ],
